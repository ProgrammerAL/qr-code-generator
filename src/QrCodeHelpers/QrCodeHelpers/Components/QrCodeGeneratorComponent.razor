@using ProgrammerAl.QrCodeHelpers.Components.AnimatedComponents;


<div class="flex flex-col gap-4">
    <div class="flex gap-2 gap-4">
        <input type="text"
               class="w-full border border-gray-300 rounded-md p-2"
               @bind-value="QrCodeText"
               @bind-value:event="oninput" />
        @if (State == ComponentStateType.Steady)
        {
            <button class="bg-blue-500 text-white p-2 rounded-md"
                    @onclick="GenerateQrCodeAsync">
                Generate QR Code
            </button>
        }
    </div>

    @if (State == ComponentStateType.GeneratingQrCode)
    {
        <div>
            <GreenSpinnerComponent TailwindCssHeightClass="h-12" TailwindCssWidthClass="w-12" />
        </div>
    }
    else if (!string.IsNullOrWhiteSpace(QrCodeImageUrl))
    {
        <img src="@QrCodeImageUrl"
             class="h-48 w-48" />
    }
</div>